<div class="container">
  <div class="row">
    <div class="col-auto">
      <h2>Meals</h2>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Add a New Meal:</h3>

      <form class="form new-meal-form">
        <div class="form-group">
          <label for="meal-name">Meal Name:</label>
          <input class="form-control" type="text" id="meal-name" name="meal-name" />
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Add Meal</button>
        </div>
      </form>
    </div>

    {{#if meals.length}}
    <div class="col-md-6 meal-list">
      <h3>Current Meals:</h3>

      {{#each meals as |meal|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/meal/{{meal.id}}">{{meal.meal_name}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{meal.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>