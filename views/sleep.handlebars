 <div class="row mt-4">
    <div class="col-md-6">
      <h3>Log Your Sleep:</h3>

      <form class="form new-sleeps-form">
        
        <div class="form-group">
          <label for="quality-of-sleep">Quality of Sleep:</label>
          <select class="form-control" id="quality-of-sleep" name="quality-of-sleep">
            <option value="poor">Poor</option>
            <option value="fair">Fair</option>
            <option value="good">Good</option>
            <option value="excellent">Excellent</option>
          </select>
        </div>
        {{!-- <div class="form-group">
          <label for="quality-of-sleep">quality-of-sleep</label>
          <textarea class="form-control" type="text" id="quality-of-sleep" name="quality-of-sleep"></textarea>
        </div> --}}
        <div class="form-group">
          <label for="sleep-start">Sleep Start time:</label>
          <textarea class="form-control" id="sleep-start" name="sleep-start"></textarea>
        </div>
        <div class="form-group">
          <label for="sleep-end">Sleep End time:</label>
          <textarea class="form-control" id="sleep-end" name="sleep-end"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>

    <div class="col-md-6 sleeps-list">
      <h3>Your Sleep Logs:</h3>

      {{#each sleep as |sleep|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <p> {{format_date sleep.date_time_start}}: {{sleep.sleep_quality}}</p>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{log.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
<script src="./js/sleep.js"></script>